<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Pages.a_Intro.OnBoardingScreen"
    android:orientation="vertical"
    android:gravity="center"
    >

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/imageSlider"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorMarginBottom="90dp"
        app:sliderIndicatorSelectedColor="@color/btn_color"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textSize="17dp"
            android:fontFamily="@font/sofia_regular"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textColor="#616772"
            android:text="Our app can send you everywhere, even space. For only $2.99 per month"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arr_icon"
            android:layout_gravity="center"
            android:id="@+id/board_btn"
            android:background="@drawable/arr_shape"
            android:padding="20dp"
            android:elevation="2dp"
            />


    </LinearLayout>

</LinearLayout>