<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="20dp"
            >


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_lst"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/cart_item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_lst"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:id="@+id/centerlinear"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/btn_style"
                    android:padding="10dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:background="@color/white"
                        android:fontFamily="@font/sofia_regular"
                        android:hint="promo code"
                        android:paddingStart="10dp" />

                    <Button
                        android:layout_width="96dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/subtract_btn_shape"
                        android:text="apply"
                        android:textColor="@color/white" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="Subtotal"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="21dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="5dp"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="USD"
                        android:textColor="#9796A1"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="Taxes and Fees"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="21dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="5dp"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="USD"
                        android:textColor="#9796A1"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="Delivery"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="21dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="5dp"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="USD"
                        android:textColor="#9796A1"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="Total"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="21dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="5dp"
                        android:fontFamily="@font/sofia_semi_bold"
                        android:text="USD"
                        android:textColor="#9796A1"
                        android:textSize="16dp" />


                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/chec_btn"
                android:layout_width="248dp"
                android:layout_height="57dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/subtract_btn_shape"
                android:text="chechout"
                android:textColor="@color/white"
                android:layout_below="@+id/centerlinear"
                android:layout_marginTop="40dp"


                />

        </RelativeLayout>

    </ScrollView>





</RelativeLayout>