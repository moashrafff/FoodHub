<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.moashrafff.foodhub.Views.Components.MainHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:mh_image2="@drawable/scan_icon"
        app:mh_text_view="Add New Card"
        app:mh_image2_color="@color/white"
        app:mh_image2_radius="20"
        />

    <LinearLayout
        android:id="@+id/new_card_main_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sofia_regular"
            android:text="Name"
            android:textColor="@color/auth_color"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/auth_hint_color"
            android:theme="@style/LoginTextInputLayoutStyle"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            app:boxStrokeColor="@color/btn_color"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:helperText="Required"
            app:helperTextEnabled="true"
            app:helperTextTextColor="@color/btn_color"
            app:hintTextColor="@color/auth_hint_color"
            app:placeholderTextColor="@color/btn_color"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sofia_regular"

                android:maxLines="1"
                app:hintTextColor="@color/auth_hint_color" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sofia_regular"
            android:text="Card Number"
            android:textColor="@color/auth_color"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/auth_hint_color"
            android:theme="@style/LoginTextInputLayoutStyle"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            app:boxStrokeColor="@color/btn_color"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:helperText="Required"
            app:helperTextEnabled="true"
            app:helperTextTextColor="@color/btn_color"
            app:hintTextColor="@color/auth_hint_color"
            app:placeholderTextColor="@color/btn_color"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sofia_regular"

                android:maxLines="1"
                app:hintTextColor="@color/auth_hint_color"
                android:drawableEnd="@drawable/master_card_icon"

                />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_regular"
                    android:text="Expires"
                    android:textColor="@color/auth_color"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/auth_hint_color"
                    android:theme="@style/LoginTextInputLayoutStyle"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxStrokeColor="@color/btn_color"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:helperText="Required"
                    app:helperTextEnabled="true"
                    app:helperTextTextColor="@color/btn_color"
                    app:hintTextColor="@color/auth_hint_color"
                    app:placeholderTextColor="@color/btn_color"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/sofia_regular"
                        android:maxLines="1"
                        app:hintTextColor="@color/auth_hint_color" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_regular"
                    android:text="CVV"
                    android:textColor="@color/auth_color"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/auth_hint_color"
                    android:theme="@style/LoginTextInputLayoutStyle"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxStrokeColor="@color/btn_color"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:helperText="Required"
                    app:helperTextEnabled="true"
                    app:helperTextTextColor="@color/btn_color"
                    app:hintTextColor="@color/auth_hint_color"
                    app:placeholderTextColor="@color/btn_color"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/sofia_regular"
                        android:maxLines="1"
                        app:hintTextColor="@color/auth_hint_color" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_card_main_linear"
        android:layout_marginStart="20dp"
        android:buttonTint="#48B59E"
        android:fontFamily="@font/sofia_regular"
        android:text="Securely save card and details"
        android:textColor="#9796A1"
        android:textSize="18sp" />

    <com.moashrafff.foodhub.Views.Widget.MainButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="SAVE"
        android:fontFamily="@font/sofia_semi_bold"
        android:textSize="15sp"

        />


</RelativeLayout>